            <Insets bottom="2.5" left="7.0" right="7.0" top="2.5" />
         </GridPane.margin>
      </SegmentedButton>
      <TextField fx:id="searchField" promptText="seach name" GridPane.rowIndex="1">
         <font>
            <Font size="14.0" />
         </font>
         <GridPane.margin>
            <Insets left="7.0" right="7.0" />
         </GridPane.margin>
      </TextField>
        <ToggleButton fx:id="ytPreNur" mnemonicParsing="false" styleClass="yearToggle" text="Pre-Nur" />
        <ToggleButton fx:id="ytNur" mnemonicParsing="false" styleClass="yearToggle" text="Nursery" />
