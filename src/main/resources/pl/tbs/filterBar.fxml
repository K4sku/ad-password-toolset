        <ToggleButton fx:id="ytY9" mnemonicParsing="false" styleClass="yearToggle" text="Y 9" />
        <ToggleButton fx:id="ytY10" mnemonicParsing="false" styleClass="yearToggle" text="Y 10" />
        <ToggleButton fx:id="ytY11" mnemonicParsing="false" styleClass="yearToggle" text="Y 11" />
        <ToggleButton fx:id="ytY12" mnemonicParsing="false" styleClass="yearToggle" text="Y 12" />
